{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "control-hybrid-use-benefit-sql-databses",
    "properties": {
        "displayName": "Control SQL Server Database License Type",
        "description": "This policy controls SQL Database Licenses.",
        "parameters": {
            "allowedSQLDatabaseLicense": {
                "type": "string",
                "defaultValue": "BasePrice",
                "allowedValues": [
                   "LicenseIncluded",
                   "BasePrice"
                ],
                "metadata": {
                    "description": "SQL Database license included or baseprice (hybrid use)",
                    "displayName": "Audit license type"
                }
            },
            "effect": {
                "type": "string",
                "defaultValue": "Deny",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "metadata": {
                    "displayName": "Effect",
                    "description": "The effect determines what happens when the policy rule is evaluated to match"
                }
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "In": [ 
                          "Microsoft.Sql/servers/databases",
                          "Microsoft.Sql/servers/elasticpools",
                          "Microsoft.Sql/instancePools",
                          "Microsoft.Sql/managedInstances"
                        ]
                    },
                    {
                        "field": "Microsoft.SqlVirtualMachine/SqlVirtualMachines/SqlServerLicenseType",
                        "notEquals": "[parameters('allowedSQLDatabaseLicense')]"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}
